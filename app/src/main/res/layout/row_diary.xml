<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="@dimen/row_height"
    android:padding="30dp"
    android:id="@+id/row"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">
        <TextView
            android:id="@+id/textView_title"
            android:layout_width="0dp"
            android:fontFamily="sans-serif-medium"
            android:textSize="@dimen/text_large"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="today diary"/>

        <TextView
            android:id="@+id/textView_date"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="3days before"
            android:gravity="end"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textView_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="It was such a pleasure to meet you alwaysIt was such a pleasure to meet you alwaysIt was such a pleasure to meet you alwaysIt was such a pleasure to meet you alwaysIt was such a pleasure to meet you alwaysIt was such a pleasure to meet you alwaysIt was such a pleasure to meet you always"/>





</LinearLayout>